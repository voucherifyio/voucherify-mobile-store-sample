<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Voucherify.TextAppearance"/>

    <!-- Texts -->
    <style name="Voucherify.TextAppearance.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/voucherify_text_primary</item>
    </style>

    <style name="Voucherify.TextAppearance.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/voucherify_text_secondary</item>
    </style>

    <!-- Toolbar -->
    <style name="Voucherify.TextAppearance.Toolbar">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_toolbar_title</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Buttons -->
    <style name="Voucherify.TextAppearance.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_primary_button</item>
    </style>

    <style name="Voucherify.TextAppearance.Button.Accent">
        <item name="android:textColor">@color/text_selector_button_accent</item>
    </style>

    <!-- Settings -->
    <style name="Voucherify.Base.Settings.TextAppearance" />

    <style name="Voucherify.Base.Settings.TextAppearance.Header">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/voucherify_text_primary</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>