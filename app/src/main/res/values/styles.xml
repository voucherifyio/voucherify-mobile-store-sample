<resources>

    <style name="Voucherify"/>

    <style name="Voucherify.Base"/>

    <style name="Voucherify.Base.TextAppearance" parent="TextAppearance.AppCompat"/>

    <style name="Voucherify.Base.Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView"/>

    <!-- Buttons -->
    <style name="Voucherify.Base.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/default_touch_target</item>
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>

    <style name="Voucherify.Base.Button.Accent">
        <item name="android:background">@drawable/background_button_accent</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/voucherify_text_light</item>
        <item name="android:textAppearance">@style/Voucherify.TextAppearance.Button.Accent</item>
    </style>

    <style name="Voucherify.Base.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">@dimen/default_touch_target</item>
    </style>

    <style name="Voucherify.Base.Button.Borderless.Medium">
        <item name="android:minHeight">@dimen/default_touch_target</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
    </style>

    <style name="Voucherify.Base.Button.Borderless.Small">
        <item name="android:minHeight">@dimen/default_touch_target</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
    </style>

    <!-- Settings -->

    <style name="Voucherify.Base.Settings"/>

    <!-- Lists -->

    <style name="Voucherify.List">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
    </style>

    <style name="Voucherify.List.Item">
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
    </style>

    <style name="Voucherify.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="Voucherify.BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/Voucherify.BottomSheet</item>
    </style>

    <style name="Voucherify.BottomSheetDialogTheme" parent="Voucherify.BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>

    <!-- Tab layout -->
    <style name="Voucherify.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_item_default_background_selector</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/voucherify_white</item>
        <item name="tabMode">fixed</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
