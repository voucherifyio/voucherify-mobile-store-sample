<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/onboarding_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="?attr/actionBarSize"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="?attr/actionBarSize"
            android:alpha="0.12"
            android:background="@android:color/white"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:paddingEnd="@dimen/margin_medium"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:paddingStart="@dimen/margin_medium">

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/onboarding_skip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:background="@null"
                android:text="@string/onboarding_skip_label"
                android:textColor="@color/voucherify_text_light"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/onboarding_indicator_0"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/indicator_unselected"/>

            <ImageView
                    android:id="@+id/onboarding_indicator_1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/indicator_unselected"/>

            <ImageView
                    android:id="@+id/onboarding_indicator_2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/indicator_unselected"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:background="@null"
                android:id="@+id/onboarding_finish_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:text="@string/onboarding_finish_label"
                android:textColor="@color/voucherify_text_light"
                android:visibility="gone"/>

        <ImageButton
                android:id="@+id/onboarding_next_button"
                style="@style/Voucherify.Base.Button.Borderless.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/ic_chevron_right_24px"
                android:background="@android:color/transparent"
                android:tint="@android:color/white"/>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>