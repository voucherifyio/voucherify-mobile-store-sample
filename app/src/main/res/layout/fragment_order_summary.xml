<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:fillViewport="true"
                                       android:background="@color/voucherify_background">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/spacing_medium">

        <TextView style="@style/Voucherify.TextAppearance.Body"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:gravity="center"
                  android:text="We received you order under transaction number XXXXX. We will ship it to you in less than a week.\nIn case of other questions, you can reach us by calling on +48 XXX XXX XXX"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/margin_large"
                      android:layout_alignParentBottom="true">

            <TextView style="@style/Voucherify.Base.Button.Borderless.Medium"
                      android:id="@+id/order_summary_history_button"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@drawable/selectable_view_accent"
                      android:textColor="@color/text_selector_button_light"
                      android:text="@string/order_summary_show_history_label"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>