<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:orientation="vertical"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/settings_customer_change_to_admin_item_container"
                      android:layout_marginTop="@dimen/margin_medium"
                      style="@style/Voucherify.List.Item"
                      android:orientation="horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_avatar_circle_24px"/>

            <TextView style="@style/Voucherify.Base.Settings.TextAppearance.Header"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/settings_customer_switch_admin_label"/>

        </LinearLayout>

        <TextView
                android:id="@+id/settings_customer_app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/spacing_medium"
                android:paddingTop="@dimen/spacing_medium"
                android:layout_alignParentBottom="true"
                android:textColor="@color/voucherify_text_secondary"
                android:textSize="@dimen/text_size_small"
                tools:text="Version 1.0.0(1234)"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>