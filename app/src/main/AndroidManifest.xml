<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.voucherify.android.sample.store">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:roundIcon="@mipmap/ic_launcher_round"
                 android:supportsRtl="true"
                 android:name=".VoucherifyApplication"
                 android:theme="@style/AppTheme">

        <activity
                android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.onboarding.OnboardingActivity"/>
        <activity android:name=".ui.login.LoginActivity"/>
        <activity android:name=".ui.dashboard.admin.DashboardAdminActivity"/>
        <activity android:name=".ui.customer.DashboardCustomerActivity"/>
        <activity android:name=".ui.customer.shoppingcart.ShoppingCartActivity"/>
        <activity android:name=".ui.customer.products.details.CustomerProductDetailsActivity"/>
        <activity android:name=".ui.dashboard.admin.customers.details.CustomerDetailsActivity"/>
        <activity android:name=".ui.dashboard.admin.products.details.ProductAdminDetailsActivity"/>
        <activity android:name=".ui.dashboard.admin.vouchers.details.VoucherAdminDetailsActivity"/>

    </application>
</manifest>
